<% content_for :subtitle do %>
...with a name .com hipsters love!
<%end%>

<h3> All the World's Articles
	<span class="ui">
		<%= link_to image_tag('add.png'), new_article_path, :title => "click here to create an article!" %>
		<%= link_to 'Create an Article', new_article_path, :title => 'create a new article' %>
	</span>
</h3>

<br/>

<table id="article">
	<thead>  
	  <tr>
		<th>Title</th>
		<th>Author</th>
		<th>Body</th>
		<th>Creation Date</th>
		<th></th>
	  </tr>
	</thead>
	
	<tbody>
		<% @articles.each do |article| %>
		  <tr class="<%= cycle('even', 'odd') %>" >
			<td><%= article.title %></td>
			<td><%= article.author %></td>
			<td><%= truncate(article.body, :length => 15) %></td>
			<td><%= article.created_at %></td>
			<td><%= link_to image_tag('page_white_magnify.png'), article, :title => "Show me the article!" %>
			<%= link_to image_tag('pencil.png'), edit_article_path(article), :title => "Edit this article" %>
			<%= link_to image_tag('page_delete.png'), article, confirm: 'Are you sure?', method: :delete, :title => "Delete this article" %></td>
		  </tr>
		<% end %>
	</tbody>
	
	<tfoot>
		<tr>
			<td colspan="6">
				<p><%= pluralize(@articles.size, 'article')%></p>
			</td>
		</tr>
	</tfoot>

</table>
<br />
